{
  "name": "react-boilerplate",
  "version": "0.1.0",
  "description": "A boilerplate React application",
  "main": "src/index.js",
  "scripts": {
    "build:dev:client": "webpack --config webpack/webpack.config.dev.client.babel.js",
    "build:dev:server": "webpack --config webpack/webpack.config.dev.server.babel.js",
    "build:prod:client": "webpack --config webpack/webpack.config.prod.client.babel.js",
    "build:prod:server": "webpack --config webpack/webpack.config.prod.server.babel.js",
    "clean": "babel-node script/cleanBuild.js",
    "run-server": "nodemon --watch script script/startServer.js",
    "prod": "NODE_ENV=production npm-run-all clean build:prod:client build:prod:server run-server",
    "dev": "NODE_ENV=development npm-run-all clean build:dev:client build:dev:server run-server",
    "start": "npm-run-all dev",
    "delay": "babel-node script/delay.js 500",
    "test": "mocha test/.setup.js --recursive test --compilers js:babel-register --reporter dot --check-leaks",
    "lint": "eslint --ext '.js' ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aem/react-boilerplate.git"
  },
  "author": "Adam Markon <https://github.com/aem>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aem/react-boilerplate/issues"
  },
  "homepage": "https://github.com/aem/react-boilerplate#readme",
  "dependencies": {
    "cxs": "^3.0.4",
    "express": "^4.14.0",
    "immutable": "^3.8.1",
    "keymirror": "^0.1.1",
    "node-sass": "^4.0.0",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-redux": "5.0.1",
    "react-router": "3.0.0",
    "redux": "3.6.0",
    "redux-thunk": "2.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.20.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "compression": "^1.6.2",
    "eslint": "^3.12.2",
    "eslint-config-airbnb-base": "^11.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx": "^0.0.2",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.8.0",
    "expect": "^1.20.2",
    "extract-text-webpack-plugin": "^2.0.0",
    "file-loader": "^0.9.0",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^3.1.2",
    "react-hot-loader": "^1.3.1",
    "universal-webpack": "^0.2.1",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.1",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-hot-middleware": "^2.17.1"
  }
}
